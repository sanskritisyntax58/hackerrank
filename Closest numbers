
#include <stdlib.h>
#include <math.h>

int cmpfunc(const void* a, const void* b) {
    return (*(int*)a - *(int*)b);
}

int* closestNumbers(int arr_count, int* arr, int* result_count) {
    qsort(arr, arr_count, sizeof(int), cmpfunc);

    int minDiff = abs(arr[1] - arr[0]);
    for (int i = 1; i < arr_count - 1; i++) {
        int diff = abs(arr[i + 1] - arr[i]);
        if (diff < minDiff) {
            minDiff = diff;
        }
    }

    int pairCount = 0;
    for (int i = 0; i < arr_count - 1; i++) {
        if (abs(arr[i + 1] - arr[i]) == minDiff) {
            pairCount += 2;
        }
    }

    int* result = malloc(pairCount * sizeof(int));
    int idx = 0;
    for (int i = 0; i < arr_count - 1; i++) {
        if (abs(arr[i + 1] - arr[i]) == minDiff) {
            result[idx++] = arr[i];
            result[idx++] = arr[i + 1];
        }
    }

    *result_count = pairCount;   // must use * to store count
    return result;               // fixes "control reaches end" error
}
